<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.jalexy.meme.info.presentation.MemeInfoFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_meme_info" >
        <argument
            android:name="meme"
            app:argType="com.jalexy.meme.main.domain.models.Meme" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.jalexy.meme.dashboard.presentation.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.jalexy.meme.notifications.presentation.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>